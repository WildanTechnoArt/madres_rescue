<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FamilyActivity">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:elevation="6dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Sebagai Keluarga"
                tools:targetApi="lollipop"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/appbar"
            android:gravity="center">

        <TextView
                android:text="Apa yang ingin anda lakukan?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:layout_margin="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"/>

        <Button
                android:text="Lihat Anggota Keluarga"
                android:layout_width="match_parent"
                android:elevation="6dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnListFamily"
                android:background="@drawable/button_hover"
                android:layout_margin="16dp"
                tools:targetApi="lollipop"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        <Button
                android:text="Cari Anggota Keluarga"
                android:layout_width="match_parent"
                android:elevation="6dp"
                tools:targetApi="lollipop"
                android:layout_height="wrap_content"
                android:id="@+id/btnSearchFamily"
                android:background="@drawable/button_hover"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>